#!/bin/sh

package_name="zlib"
package_version="1.3.1"
package_description="Compression and decompression routines"
package_source="https://zlib.net/fossils/zlib-1.3.1.tar.gz 9855b6d802d7fe5b7bd5b196a2271655"

source_dir="$package_name-$package_version"

configure() {
    ./configure --prefix=/usr
}

build() {
    make
}

install_files() {
    make DESTDIR="$destdir" install
    rm -r "$destdir/usr/lib/libz.a"
}
