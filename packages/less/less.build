#!/bin/sh

package_name="less"
package_version="679"
package_description="A text file viewer"
package_source="https://www.greenwoodsoftware.com/less/less-679.tar.gz 0386dc14f6a081a94dfb4c2413864eed"

source_dir="$package_name-$package_version"

configure() {
    ./configure --prefix=/usr --sysconfdir=/etc
}

build() {
    make
}

install_files() {
    make DESTDIR="$destdir" install
}
