#!/bin/sh

package_name="cryptsetup"
package_version="2.8.1"
package_description=""
package_source="https://www.kernel.org/pub/linux/utils/cryptsetup/v2.8/cryptsetup-2.8.1.tar.xz 92b51ffa30e98447dccece6e4a055e3b"

source_dir="$package_name-$package_version"

configure() {
    ./configure --prefix=/usr       \
	--disable-ssh-token \
	--disable-asciidoc
}

build() {
    make
}

install_files() {
    make DESTDIR="$destdir" install
}
